            "pullrequest": {
                "title": "remove castro and maestro from 2.x",
                "type": "pullrequest",
                "links": {
                    "self": {
                        "href": "https://api.bitbucket.org/2.0/repositories/yt_analysis/yt/pullrequests/630"
                    },
                    "html": {
